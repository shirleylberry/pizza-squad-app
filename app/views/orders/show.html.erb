<div class="col-sm-4 col-sm-offset-4">

  <h1 class="center-heading">Your Order for</h1>
  <h3><%= @event.title %></h3>
    <% if @event.active? %>
      <h5><em><%= @event.time_left %> until orders close</em></h5>
    <% else %>
      <h5>Event ended on <%= @event.date.strftime("%A, %B %e, %Y") %></h5>
    <% end %>


    <p>You ordered:</p>

    <ol>
      <% @order.slices.each do |slice| %>
        <li><%= slice.pizza.topping %></li>
      <% end %>
    </ol>

    <% if @order.user == current_user %>
      <p><%= link_to "Edit Order", edit_event_order_path(@event, @order) if @event.active? %></p>
    <% end %>

</div>
