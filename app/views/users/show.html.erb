<div class="col-sm-6 col-sm-offset-3">

<h2><%= @user.name %></h2>

<h4>Active Orders </h4>
<ul class="list-group">
  <% @active_orders.each do |order| %>
    <%= link_to "Order for event #{order.event.title}, #{order.slices.count} slices", event_order_path(order.event, order), class:"list-group-item list-format list-fontcolor" %>
  <% end %>
</ul>

<h4>Previous Orders </h4>
<ul class="list-group">
  <% @inactive_orders.each do |order| %>
    <%= link_to "Order for event #{order.event.title}, #{order.slices.count} slices", event_order_path(order.event, order), class:"list-group-item list-format list-fontcolor" %>
  <% end %>
</ul>
</div>
