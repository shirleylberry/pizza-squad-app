<% if event.errors.any? %>
  <ul>
    <% event.errors.full_messages.each do |msg| %>
      <h3>Errors: </h3>
      <li><%= msg %></li>
    <%end%>
  </ul>
<%end%>
<h1 style="text-align:center;">Create An Event</h1>

<!-- ,  class: "col-md-4 control-label" -->
<div class="col-sm-12">

    <%= form_for(event, html: { class:"form-horizontal center" }) do |f| %>
      <%= f.label :title%>
      <%= f.text_field :title, class: "form-control", :placeholder => "FSP PIZZA PARTY"%> <br>
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control",:placeholder => "Come celebrate flatiron school presents" %> <br>
      <%= f.label :date%>
      <%= f.datetime_field :date, class: "form-control", :placeholder => "3/14/16 3pm, or tomorrow at 3pm"%> <br>
      <%= f.label :deadline %>
      <%= f.datetime_field :deadline, class: "form-control", :placeholder => "3/14/16 1pm, or tomorrow at 1pm"%> <br>
      <%= f.submit class:"btn btn-primary" %>
    <% end %>
</div>
