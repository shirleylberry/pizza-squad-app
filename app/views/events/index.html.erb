<div class="col-sm-6 col-sm-offset-3">

  <h1 class="text-center">Upcoming Events</h1>
  <ul class="list-group">
    <% @active_events.each do |event| %>
      <%= link_to event_path(event), class: "list-group-item list-format" do  %>
        <h4 class="list-group-item-heading"><%= event.title%></h4>
        <p class="list-group-item-text">  <%= event.description%>  </p>
      <%end%>
    <%end%>
  </ul>

  <h2 class="text-center">Past Events</h2>
  <ul class="list-group">
    <% (@events - @active_events).each do |event| %>
      <%= link_to event_path(event), class: "list-group-item list-format" do  %>
        <h4 class="list-group-item-heading"><%= event.title%></h4>
        <p class="list-group-item-text">  <%= event.description%>  </p>
      <%end%>
    <%end%>
  </ul>

  <center><%= link_to "Create An Event", new_event_path, {class:"btn btn-lg btn-primary"} %></center>

</div>
